<!--imposto il titolo della pagina con il metodo provide.. assegno titolo a :title-->
<% provide :title, 'Login' %>

<h1>Login</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(:session, url: sessions_path) do |f| %>

              <%= f.label :email %>
              <%= f.text_field :email %>

              <%= f.label :password %>
              <%= f.password_field :password %>

              <%= f.submit 'Login', class: 'btn btn-lg btn-primary' %>
      <% end %>

      <p>Nuovo utente? <%= link_to 'Registrati!', signup_path %></p>
    </div>
</div>