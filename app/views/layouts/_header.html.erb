<!--sezione header del layout di base-->
<header class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <!-- menu per dispositivi mobile -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a href="/"><img src="/assets/logo3.png" width="230" height="82" class="logorunclub" /></a>
      <%#= link_to "SocialNetwork", root_path, class: "navbar-brand" %>
    </div>

    <!-- Link menu principale -->
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
        <% #link_to is the Rails helper to create links (it generates <a...> tags) %>
        <li><%=link_to "Home", root_path %></li>
        <li><%=link_to "Faq", faq_path %></li>

        <% if signed_in? %>
            <li><%= link_to "Utenti", users_path %></li>
            <li class="dropdown">
               <a href="#" class="dropdown-toggle" id="accountMenu" data-toggle="dropdown">Account <span class="caret"></span></a>
               <ul class="dropdown-menu" role="menu" aria-labelledby="accountMenu">
                    <li><%= link_to "Profilo", current_user %></li>
                    <li><%= link_to "Impostazioni", edit_user_path(current_user) %></li>
                    <li class="divider"></li>
                    <li><%= link_to "Logout", signout_path, method: "delete" %></li>
               </ul>
            </li>
         <% else %>
            <li><%=link_to "Login", signin_path %></li>
         <% end %>
      </ul>
    </div> <!--/.nav-collapse -->
  </div> <!-- /.container-fluid -->
</header>

<% if current_page?(root_path) %>

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        <div class="item bg bg1 active">
          <div class="container">
            <div class="carousel-caption">
              <h1>Allenati con noi su Run Club</h1>
              <p>&nbsp;</p>
            </div>
          </div>
        </div>
        <div class="item bg bg2">
          <div class="container">
            <div class="carousel-caption">
              <h1>Preparati al meglio e condividi i tuoi risultati</h1>
              <p>&nbsp;</p>
            </div>
          </div>
        </div>
        <div class="item bg bg3">
          <div class="container">
            <div class="carousel-caption">
              <h1>Il Run Club ti mette in contatto con tutti gli amanti della corsa</h1>
              <p>&nbsp;</p>
            </div>
          </div>
        </div>
      </div>
      <a class="left carousel-control" href="#myCarousel" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
    </div>

<% else %>
    <div class="row">
        <img src="/assets/slidermini.jpg"  class="img-slider2" />
    </div>
    <br /><br />
<% end %>