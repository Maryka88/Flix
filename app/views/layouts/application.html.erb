<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <!-- per impedire false richieste cross-site-->
  <%= csrf_meta_tags %>

  <%= render "layouts/shit" %> <!-- prendo parte shit del layout -->

  <!-- per la visualizzazione delle mappe -->
  <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
  <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
</head>
<body>

<!-- Fixed navbar -->
<%= render "layouts/header" %> <!-- prendo parte header del layout -->

<div class="container">
    <!-- Page content -->

    <% # messaggio flash %>
    <% flash.each do |key, value| %>
         <div class="alert alert-<%= key %> alert-dismissable">
             <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
             <%= value %>
         </div>
    <% end %>

    <%= yield %>

    <!-- Footer -->
    <%= render "layouts/footer" %> <!-- prendo parte footer del layout -->

    <%#= debug(params) if Rails.env.development? %> <!-- info debug se ambiente development -->
  </div>



</body>
</html>
