<%= form_for(@post) do |f| %>

    <div class="row">
      <div class="field col-md-12">
        <%= f.text_field :title, placeholder: 'Titolo' %>
        <%= f.text_area :content, placeholder: 'Cosa stai facendo?' %>
        <%= f.submit 'Invia', class: 'btn btn-primary btn-home' %>
      </div>
    </div>
<% end %>