<!--visualizza errori form  -->
<% if object.errors.any? %>
    <div id="error_explanation">
        <div class="alert alert-error">
          Il form contiene <%= pluralize(object.errors.count, "error") %>.
        </div>
        <ul>
          <% object.errors.full_messages.each do |message| %>
                 <li>* <%= message %></li>
          <% end %>
        </ul>
    </div>
<% end %>