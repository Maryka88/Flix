<%= form_for(@route) do |f| %>

    <div class="row">
      <div class="field col-md-12">
        <%= f.text_field :name, placeholder: 'Nome' %>
        <div class="field col-md-2 titololatlong">Partenza:</div>
        <div class="field col-md-5"><%= f.text_field :latitude, placeholder: 'latitudine' %></div>
        <div class="field col-md-5"><%= f.text_field :longitude, placeholder: 'longitudine' %></div>
        <div class="field col-md-2 titololatlong">Arrivo:</div>
        <div class="field col-md-5"><%= f.text_field :latitude2, placeholder: 'latitudine' %></div>
        <div class="field col-md-5"><%= f.text_field :longitude2, placeholder: 'longitudine' %></div>

        <div class="field col-md-2 titololatlong">Difficolt√†:</div>
        <div class="field col-md-8">
          <select name="route[difficulty]" id="route_difficulty">
            <option>facile</option>
            <option>intermedio</option>
            <option>difficile</option>
          </select>
        </div>

        <div class="field col-md-2 titololatlong">Distanza:</div>
        <div class="field col-md-5"><%= f.text_field :distance, placeholder: '0' %></div>
        <div class="field col-md-5">
          <select name="route[type_distance]" id="route_difficulty">
              <option>metri</option>
              <option>chilometri</option>
            </select>
        </div>
        <div class="field col-md-2 titololatlong">Tempo:</div>
        <div class="field col-md-5"><%= f.text_field :timeroute, placeholder: '0' %></div>
        <div class="field col-md-5">
          <select name="route[type_timeroute]" id="route_difficulty">
            <option>minuti</option>
            <option>ore</option>
          </select>
        </div>

        <!--<div class="field col-md-3"><%#= f.text_field :lenghtroute, placeholder: 'lunghezza' %></div>
        <div class="field col-md-3"><%#= f.text_field :timeroute, placeholder: 'tempo' %></div>-->
        <div style="clear: both"></div>
        <%= f.submit 'Invia', class: 'btn btn-primary btn-home' %>
      </div>
    </div>

<% end %>