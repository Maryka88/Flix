<%= form_for(@route) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="row">
      <div class="field col-md-10">
        <%= f.text_field :name, placeholder: 'Nome' %>
        <%= f.text_field :latitude, placeholder: 'latitude' %>
        <%= f.text_field :longitude, placeholder: 'longitude' %>
        <%= f.text_field :latitude2, placeholder: 'latitude2' %>
        <%= f.text_field :longitude2, placeholder: 'longitude2' %>
        <%= f.text_field :difficulty, placeholder: 'difficulty' %>

        <%= f.submit 'Invia', class: 'btn btn-primary btn-lg' %>
      </div>
    </div>

<% end %>