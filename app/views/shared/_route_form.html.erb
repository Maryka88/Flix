<%= form_for(@route) do |f| %>

    <div class="row">
      <div class="field col-md-8">
        <%= f.text_field :name, placeholder: 'Nome' %>
        <div class="field col-md-2 titololatlong">Origine:</div>
        <div class="field col-md-4"><%= f.text_field :latitude, placeholder: 'latitudine' %></div>
        <div class="field col-md-4"><%= f.text_field :longitude, placeholder: 'longitudine' %></div>
        <div class="field col-md-2 titololatlong">Destinazione:</div>
        <div class="field col-md-4"><%= f.text_field :latitude2, placeholder: 'latitudine' %></div>
        <div class="field col-md-4"><%= f.text_field :longitude2, placeholder: 'longitudine' %></div>

        <div class="field col-md-2 titololatlong">Difficolt√†:</div>
        <div class="field col-md-8">
          <select name="route[difficulty]" id="route_difficulty">
            <option>facile</option>
            <option>intermedio</option>
            <option>difficile</option>
          </select>
        </div>
        <!--<div class="field col-md-3"><%#= f.text_field :lenghtroute, placeholder: 'lunghezza' %></div>
        <div class="field col-md-3"><%#= f.text_field :timeroute, placeholder: 'tempo' %></div>-->
        <div style="clear: both"></div>
        <%= f.submit 'Invia', class: 'btn btn-primary btn-home' %>
      </div>
    </div>

<% end %>